{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "target": "esnext",
    "rootDir": ".",
    "module": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "incremental": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "*.ts",
    "*.test.ts"
  ]
}